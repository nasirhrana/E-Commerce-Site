@model E_CommerceSite.Models.Category

@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2 style="text-align: center">Create Company</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <label id="Name" class="control-label col-md-4"></label>
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.CategoryName, new { placeholder = " Enter Category Name", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CategoryName)
            </div>
        </div>

        <div class="form-group">
            <label id="Name" class="control-label col-md-4"></label>
            <div class="col-md-8">
                <input type="submit" value="Save" class="btn btn-default" style="background-color: #4CAF50;color: white" />
            </div>
        </div>
    </div>
}
<h3 style="text-align: center; color: green">@ViewBag.Msg</h3>

